
<head>
<link rel="stylesheet" href="/stylesheets/posts.css" />

</head>

<body>

    <!-- JUMBOTRON  -->
    <div class="jumbotron text-left">
    <div class="container">
        <br></br>
        <p class="font-weight-bold">
        <h1><b>Community</b></h1>
        <h1><b>Posts</b></h1></p>
        <br></br>
        <br></br>
        <br></br>
    </div> 
    </div> 

    <div class="container">
        <form action="/posts/search" method="GET">
            <label for="search">Search:</label><br>
            <input type="text" name="search">
            <input type="submit" value="Search">
        </form>
    <div>

    <br>
    <div class="container">
    <a href="/posts/new" class="btn btn-primary">Create A New Post</a>

        <div>
            <br>
                <ul>
                    <% @posts.each.reverse_each do |post| %>
                        <% c = post.created_at %>
                        <li><%= c.strftime("%B %e, %Y") %>
                       <a href="<%= "/posts/#{post.id}" %>"><%= post.name %></a></li>
                    <% end %>
                </ul>

        </div>

            


        
    <br></br>
    <br></br>
    <br></br>


    </div>
</body>